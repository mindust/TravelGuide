<header></header>
<br>
<br>
<h2>创建旅游套餐</h2>

<head>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
    <title>创建旅游套餐</title>

    <link rel="stylesheet" href="/css/bootstrap-3.3.2.min.css" type="text/css">
    <link rel="stylesheet" href="/css/bootstrap-example.css" type="text/css">
    <link rel="stylesheet" href="/css/prettify.css" type="text/css">

    <script type="text/javascript" src="/js/jquery-2.1.3.min.js"></script>
    <script type="text/javascript" src="/js/bootstrap-3.3.2.min.js"></script>
    <script type="text/javascript" src="/js/prettify.js"></script>

    <link rel="stylesheet" href="/css/bootstrap-multiselect.css" type="text/css">
    <script type="text/javascript" src="/js/bootstrap-multiselect.js"></script>



</head>

<form action="/admin/travelPackagecreate/" method="POST" enctype="multipart/form-data">
    <table border="1"  cellpadding="5" width="100%" bordercolor="#000000">
        <tr>
            <td>
                旅游套餐
            </td>
            <td colspan="2">
                <input type="text" style="width: 100%" name="NAME" PLACEHOLDER="套餐名称">
            </td>
            <td colspan="2">
                费用 <input type="text"  name="FEE" PLACEHOLDER="套餐费用">
            </td>
            <!--<td>-->
                <!--<input type="text" style="width: 100%" name="FEE" PLACEHOLDER="套餐费用">-->
            <!--</td>-->
        </tr>
        <tr>
            <td>
                标签
            </td>
            <td colspan="4">
                <input type="text" style="width: 100%" name="TAGS" placeholder="标签1">
            </td>
        </tr>
        <tr>
            <td rowspan="6">
                亮点
            </td>
            <tr>
                <td colspan="4">
                     <input name="HIGHLIGHTS1" id="text1" type="text" onblur="text()" size="30"  placeholder="亮点1" style="width: 100%" >
                </td>
            </tr>
            <tr>
                <td colspan="4">
                     <input name="HIGHLIGHTS2" id="text2" type="text" onblur="text()" size="30"  placeholder="亮点2" style="width: 100%" >
                 </td>
            </tr>
            <tr>
                <td colspan="4">
                    <input name="HIGHLIGHTS3" id="text3" type="text" onblur="text()" size="30"  placeholder="亮点3" style="width: 100%"  >
                </td>
            </tr>
            <tr>
                <td colspan="4">
                    <input name="HIGHLIGHTS4" id="text4" type="text" onblur="text()" size="30"  placeholder="亮点4" style="width: 100%"  >
                </td>
            </tr>
            <tr>
                <td colspan="4">
                    <input name="HIGHLIGHTS5" id="text5" type="text" onblur="text()" size="30"  placeholder="亮点5" style="width: 100%" >
                </td>
            </tr>
        </tr>
        <tr>
            <td>
                日期
            </td>
            <td colspan="2">
                <input type="date"  name="START_DATE">~<input type="date"  name="END_DATE">
            </td>
            <td>
                天数 <input type="text" name="DAYS">
            </td>
            <td>
                <input name="HIGHLIGHTS" type="text" id="hidden" hidden>
            </td>
        </tr>
        <tr>
            <td>
                集合地点
            </td>
            <td colspan="4">
                <input type="text" style="width:100%" name="COLLECTION_ADDRESS">
            </td>
        </tr>
        <tr>
            <td>
                包含费用
            </td>
            <td colspan="4">
                <input type="text" style="width:100%" name="FEE_INCLUDE">
            </td>
        </tr>
        <tr>
            <td>
                包含不费用
            </td>
            <td colspan="4">
                <input type="text" style="width:100%" name="FEE_NOT_INCLUDE">
            </td>
        </tr>
        <tr>
            <td>
                套餐描述
            </td>
            <td colspan="4">
                <textarea rows="3" style="height: 100%;width: 100%" name="DESCRIPTION" placeholder="请输入套餐描述"></textarea>
            </td>
        </tr>
        <tr>
            <td>
                套餐内容
            </td>
            <td colspan="4">
                <textarea rows="3" style="height: 100%;width: 100%" name="CONTENT" placeholder="请输入套餐的详情"></textarea>
            </td>
        </tr>
        <tr>
            <td>
                旅行建议
            </td>
            <td colspan="4">
                <textarea rows="4" style="height: 100%;width: 100%" name="ADVICE" placeholder="关于此套餐的建议"></textarea>
            </td>
        </tr>
        <tr>
            <td >
                参团人数
            </td>
            <td align="center" >
                <input type="text" style="width:100%" name="PERSON_NUM">
            </td>
            <td align="center" >
                酒店
            </td>
            <td colspan="2">
                <input type="text" style="width:100%" name="HOTELS">
            </td>
        </tr>
        <tr>
            <td>
                交通
            </td>
            <td align="center" >
                飞机<input type="radio" style="width:100%" name="TRANSPOT" value="Plane">
            </td>
            <td align="center" >
                大巴<input type="radio" style="width:100%" name="TRANSPOT" value="Bus">
            </td>
            <td align="center" >
                坐船<input type="radio" style="width:100%" name="TRANSPOT" value="Ship">
            </td>
            <td align="center" >
                徒步 <input type="radio" style="width:100%" name="TRANSPOT" value="Walk">
            </td>
        </tr>
        <tr>
            <td>
                选择景点
            </td>
            <td>
                <select name="VIEW_SPOT_ID" class="form-control input-sm" id="example-confirmation" multiple="multiple">
                    {{range .posts}}
                    <option value={{.NAME}}>{{.NAME}}</option>
                    {{end}}
                </select>
            </td>
            <td align="center"> <input type="submit" value="保存" /></td><td align="center"><input type="button" value="取消" onclick="Create()"/><td align="center"><input type="button" value="返回" onclick="home()"/></td>
        </tr>

    </table>
</form>

<script type="text/javascript">
    $(document).ready(function() {
        $('#example-confirmation').multiselect({
            onChange: function(element, checked) {
                if(checked === true) {
                    alert($("select[@name=VIEW_SPOT_ID] option[@selected]").val());
                    //action taken here if true
                }
                else if(checked === false) {
                    if(confirm('Do you wish to deselect the element?')) {
                        //action taken here
                    }
                    else {
                        $("#example-confirmation").multiselect('select', element.val());
                    }
                }
            }
        });

    });
</script>

<script>
    function Create(){
        window.location.replace("/admin/travelPackagecreate/")
    }
    function home(){
        window.location.replace("/")
    }
    function text() {
        var a = document.getElementById("text1").value;
        var b = document.getElementById("text2").value;
        var c = document.getElementById("text3").value;
        var d = document.getElementById("text4").value;
        var e = document.getElementById("text5").value;
        var hidden = document.getElementById("hidden").value;
        var s = hidden.split(",");
        if (s[0] == a) {
            a = s[0];
        }
        else {
            a = document.getElementById("text1").value;
        }
        if (s[1] == b) {
            b = s[1];
        }
        else {
            b = document.getElementById("text2").value;
        }
        if (s[2] == c) {
            c = s[2];
        }
        else {
            c = document.getElementById("text3").value;
        }
        if (s[3] == d) {
            d = s[3];
        }
        else {
            d = document.getElementById("text4").value;
        }
        if (s[4] == e) {
            e = s[4];
        }
        else {
            e = document.getElementById("text5").value;
        }
        document.getElementById("hidden").value = a + "," + b + "," + c + "," + d + "," + e;
    }


</script>




