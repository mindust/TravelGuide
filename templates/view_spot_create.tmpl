<h2>创建景点</h2>
<form action="/admin/spots/create/" method="POST" enctype="multipart/form-data">
    <table border="1"  cellpadding="5" width="100%" bordercolor="#000000">
        <tr>
            <td>district</td><td><input type="text" style="width: 100%" name="COUNTRY" PLACEHOLDER="COUNTRY">Country</td><td><input type="text" style="width: 100%" name="PROVINCE" PLACEHOLDER="PROVINCE"/>Province</td><td><input type="text" style="width: 100%" name="CITY" placeholder="CITY" />City</td>
            <td><input type="text" style="width: 100%" name="COUNTY" placeholder="COUNTY" />County</td>
        </tr>
        <tr>
            <td>Spot Name</td><td><input type="text" style="width: 100%" name="NAME" placeholder="NAME" /></td><td colspan="3"> Picture <input type="file" name="IMAGE" id="IMAGE" onchange="PreviewImage('preview',this,220,220);" multiple="multiple"/></td>
        </tr>
        <tr>
            <td>Level</td><td><input type="radio" name="LEVEL" value="First" checked>First Level</td><td><input type="radio" name="LEVEL" value="Second">Second Level</td><td><input type="radio" name="LEVEL" value="Third" >Third Level</td><td  rowspan="6"><img id="img_name" style="height:300px;width:300px;" /></td>
        </tr>
        <tr>
            <td>Status</td><td><input type="radio" name="STATUS" value="enable">Enable</td><td><input type="radio" name="STATUS" value="disable">Disable</td><td><input type="radio" name="STATUS" value="nostatus" >No Status</td>
        </tr>
        <tr>
            <td>Grade</td><td><input type="radio" name="GRADE" value="Hot" readonly>Hot</td><td><input type="radio" name="GRADE" value="Economic" readonly>Economic</td><td><input type="radio" name="GRADE" value="Luxury" readonly>Luxury</td>
        </tr>
        <tr>
            <td>Price</td><td><input type="text" style="width: 100%" name="PRICE" placeholder=" " /></td>
        </tr>
            <td rowspan="3">Label</td><td rowspan="3" colspan="3"><textarea style="height: 100%;width: 100%" name="LABEL" placeholder="please write comments"></textarea></td>
        </tr>
        <tr>

        </tr>
        <tr>

        </tr>
        <tr>

        </tr>
        <tr>
            <td></td><td align="center"> <input type="submit" value="Submit" /></td><td align="center"><input type="button" value="Cancel" onclick="Create()"/></td></td><td align="center"><input type="button" value="SpotsList" onclick="spot_list()"/></td><td align="center"><input type="button" value="Home" onclick="home()"/></td>
        </tr>

    </table>
</form>
